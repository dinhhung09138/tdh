@model TDH.Areas.Administrator.Models.NavigationModel
@Html.AntiForgeryToken()
@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.Insert)
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Tiêu đề <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @maxlength = 70, @required = true, @focus = true, @tabindex = "1" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Mô tả  <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = 2, @maxlength = 250, @tabindex = "2" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Danh mục con <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @{
            if (Model.Insert)
            {
                @Html.CheckBoxFor(m => m.NoChild, new { @class = "form-control", @tabindex = "3" })
            }
            else
            {
                if (Model.NoChild)
                {
                    @Html.HiddenFor(m => m.NoChild)
                    @Html.Raw("<span style='font-weight: italic;'>Danh mục không cho phép thêm chủ đề con</span>")
                }
                else
                {
                    @Html.CheckBoxFor(m => m.NoChild, new { @class = "form-control", @tabindex = "3" })
                }
            }
        }
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Thứ tự <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.Ordering, new { @class = "form-control", @maxlength = 2, @required = true, @tabindex = "4" })
        @Html.ValidationMessageFor(m => m.Ordering)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Hiển thị <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.CheckBoxFor(m => m.Publish, new { @class = "form-control", @tabindex = "5" })
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Hình ảnh <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        <div class="row form-group">
            <div class="col-md-12 col-xs-12">
                <a href="javascript:;" id="selectImg" tabindex="6">Chọn ảnh (352x230)</a>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12 col-xs-12">
                @Html.HiddenFor(m => m.Image)
                <div class="row" style="padding:10px;">
                    <img id="imgImage" src="@Model.Image" width="352" height="230" />
                </div> 
            </div>
        </div>
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Tiêu đề <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaTitle, new { @class = "form-control", @maxlength = 100, @required = true, @tabindex = "7" })
        @Html.ValidationMessageFor(m => m.MetaTitle)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Mô tả <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextAreaFor(m => m.MetaDescription, new { @class = "form-control", @rows = 2, @required = true, @maxlength = 160, @tabindex = "8" })
        @Html.ValidationMessageFor(m => m.MetaDescription)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Từ khóa <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaKeywords, new { @class = "form-control", @maxlength = 250, @required = true, @tabindex = "9" })
        @Html.ValidationMessageFor(m => m.MetaKeywords)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Trang kế
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaNext, new { @class = "form-control", @maxlength = 170, @tabindex = "10" })
        @Html.ValidationMessageFor(m => m.MetaNext)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Site name
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaOgSiteName, new { @class = "form-control", @maxlength = 100, @tabindex = "11" })
        @Html.ValidationMessageFor(m => m.MetaOgSiteName)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Ảnh minh họa <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="row form-group">
                    <div class="col-md-12 col-xs-12">
                        <a href="javascript:;" id="selectImgG" tabindex="12">Chọn ảnh G+/Facebook (1200 x 630)</a>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12 col-xs-12">
                        @Html.HiddenFor(m => m.MetaOgImage)
                        <div class="row" style="padding:10px;">
                            <img id="imgMetaOgImage" name="imgMetaOgImage" src="@Model.MetaOgImage" width="300" height="160" />
                        </div> 
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="row form-group">
                    <div class="col-md-12 col-xs-12">
                        <a href="javascript:;" id="selectImgTwitter" tabindex="13">Chọn ảnh Twitter (1200 x 630)</a>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12 col-xs-12">
                        @Html.HiddenFor(m => m.MetaTwitterImage)
                        <div class="row" style="padding:10px;">
                            <img id="imgMetaTwitterImage" src="@Model.MetaTwitterImage" width="300" height="160" />
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Article
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaArticleName, new { @class = "form-control", @maxlength = 200, @tabindex = "14" })
        @Html.ValidationMessageFor(m => m.MetaArticleName)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Section
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaArticleSection, new { @class = "form-control", @maxlength = 200, @tabindex = "15" })
        @Html.ValidationMessageFor(m => m.MetaArticleSection)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        [SEO] Tags
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.MetaArticleTag, new { @class = "form-control", @maxlength = 255, @tabindex = "16" })
        @Html.ValidationMessageFor(m => m.MetaArticleTag)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12">
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @{
            if (ViewBag.Add == true || ViewBag.Edit == true)
            {
                <a href="javascript:;" data-url="/administrator/admpost/navigation" data-title="Danh mục bài viết" class="btn btn-default pg_ld" tabindex="17">Quay lại</a>
                <button type="submit" id="submitForm" class="btn btn-primary" tabindex="18">Lưu</button>
            }
        }
    </div>
</div>

