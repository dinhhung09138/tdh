@model TDH.Areas.Administrator.Models.IdeaModel
@Html.AntiForgeryToken()
@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.Insert)
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Tiêu đề <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @maxlength = 130, @required = true, @focus = true, @tabindex = "1" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12 text-right">
        Mô tả  <span style="color:red; font-weight:bold;">*</span>
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = 2, @tabindex = "2" })
        @Html.ValidationMessageFor(m => m.Content)
    </div>
</div>
<div class="row form-group">
    <div class="col-md-3 col-sm-4 col-xs-12">
    </div>
    <div class="col-md-9 col-sm-8 col-xs-12">
        @{
            if (ViewBag.Add == true || ViewBag.Edit == true)
            {
                <a href="/administrator/admtarget/idea" class="btn btn-default" tabindex="18">Quay lại</a>
                <button type="submit" class="btn btn-primary" tabindex="19">Lưu</button>
            }
        }
    </div>
</div>

