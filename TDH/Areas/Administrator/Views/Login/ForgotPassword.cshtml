@model CraftStore.Areas.Administrator.Models.LoginModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLogin.cshtml";
}

<p class="login-box-msg">Quên mật khẩu</p>
<form action="/administrator/login/forgotpassword" method="post">
    @{
        if (ViewBag.msg.Length > 0)
        {
            <div class="form-group">
                <span style="color:red">@ViewBag.msg</span>
            </div>
        }
    }
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
    </div>
    <div class="row">
        <div class="col-6">
            <a href="/administrator/login">Đăng nhập</a>
        </div>
        <!-- /.col -->
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Yêu cầu mật khẩu</button>
        </div>
    </div>
</form>
<p class="mb-1">
    
</p>


