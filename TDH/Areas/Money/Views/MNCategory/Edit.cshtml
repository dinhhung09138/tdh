@model TDH.Model.Money.CategoryModel
@{
    ViewBag.Title = "Cập nhật danh mục thu chi";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
@section header{
    <link rel="stylesheet" href="/Areas/Administrator/Content/plugins/datatables/dataTables.custom.css">
}
@Html.Action("modulenavigation", "base", new { @area = "administrator", @moduleCode = "money" })
<div class="card card-success">
    <div class="card-header with-border no-bg">
        <h3 class="card-title">Cập nhật danh mục thu chi</h3>
        <div class="card-tools pull-right">
            @{
                if (ViewBag.View == true)
                {
                    <a class="btn btn-box-tool" href="/money/mncategory/index" data-title="Danh mục thu chi">
                        <i class="fa fa-long-arrow-left"></i>
                    </a>
                }
                <a class="btn btn-box-tool" href="/money/mncategory/edit/@ViewBag.id" data-title="Cập nhật danh mục thu chi">
                    <i class="fa fa-refresh"></i>
                </a>
            }
        </div>
    </div>
    <div class="card-body">
        @using (Ajax.BeginForm("edit", "mncategory", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSuccess", OnFailure = "OnFailure", OnBegin = "beginSubmit" }, new { @id = "form" }))
        {
            @Html.Partial("_Form", Model)
        }
    </div>
</div>
@section script {
    <script src="/Areas/Administrator/Content/ckeditor/ckeditor.js"></script>
    <script src="/Areas/Administrator/Content/ckfinder/ckfinder.js"></script>
    <script src="/Scripts/jquery.validate.min.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/Areas/Money/Content/Category/action.js"></script>
}


