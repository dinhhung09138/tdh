@using Utils;
@model IEnumerable<TDH.Model.ViewModel.WebSite.PostViewModel>
<h4 class="side">Bài viết mới</h4>
<div class="edit-pics">
    @{
        foreach (var item in Model)
        {
            <div class="editor-pics">
                <div class="col-md-3 item-pic">
                    <img src="@item.Image" class="img-responsive" alt="@item.Title" />
                </div>
                <div class="col-md-9 item-details">
                    <h5 class="inner two"><a href="@item.Alias">@item.Title</a></h5>
                    <div class="td-post-date two"><i class="glyphicon glyphicon-time"></i>@item.CreateDate</div>
                </div>
                <div class="clearfix"></div>
            </div>
        }
    }
</div>